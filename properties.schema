{
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://jsonschema.net",
  "required":false,
  "properties":{
    "pluginLocations": {
      "type":"object",
      "required":true,
      "properties":{
        "config": {
          "type":"object",
          "properties": {
            "_devtools": {
              "type":"object",
              "required":false,
              "legend": "Dev tools",
              "properties":{
                "_isEnabled": {
                  "type":"boolean",
                  "required":false,
                  "title": "Enable dev tools",
                  "inputType": { "type": "Boolean", "options": [false, true]},
                  "validators": [],
                  "help": "Set to true to enable 'dev tools' features. Remember to disable/uninstall before going live!"
                },
                "_isDisabledInProduction": {
                  "type":"boolean",
                  "required":false,
                  "default": false,
                  "title": "Disable dev tools when course is built without sourcemaps",
                  "inputType": { "type": "Boolean", "options": [false, true]},
                  "validators": [],
                  "help": "Set to true to disabled 'dev tools' features when the course is built without sourcemaps."
                }
              }
            }
          }
        },
        "course": {
          "type":"object"
        },
        "contentobject": {
          "type":"object"
        },
        "article": {
          "type":"object"
        },
        "block": {
          "type":"object"
        },
        "component": {
          "type":"object"
        }
      }
    }
  }
}
